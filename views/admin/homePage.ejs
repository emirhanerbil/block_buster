        <%- include('./partials/script') %>

        <script src="/socket.io/socket.io.js"></script>
        <script>
            var socket = io.connect('http://localhost:3000');
            var onlineUsersDisplay = document.getElementById('onlineUsers');
          // Emit event when connecting to the user page
          socket.emit('userPageConnect');

          socket.on('onlineUsers', function(count) {
            onlineUsersDisplay.textContent = count;
          });
        
          // Function to update total visits
          async function updateTotalVisits() {
            try {
              const response = await fetch('/admin/total-visits');
              const data = await response.json();
              document.getElementById('totalVisits').innerText = data.totalVisits;
            } catch (error) {
              console.error('Error updating total visits:', error);
            }
          }
        
          // Update total visits on page load
          window.onload = () => {
            updateTotalVisits();
        
            // Update total visits every 10 seconds
            setInterval(updateTotalVisits, 10000);
          };
        </script>
